= form_for @ticket, html: { class: 'form-horizontal' } do |f|
  .control-group
    = f.label :subject, class: 'control-label'
    .controls
      = f.text_field :subject, class: 'text_field'
  .control-group
    = f.label :body, class: 'control-label'
    .controls
      = f.text_area :body, class: 'text_area'
  .control-group
    = f.fields_for :customer do |builder|
      = render 'customer_fields', :f => builder

  .form-actions
    = f.submit nil, class: 'btn btn-primary'
    = link_to t('.cancel', default: t('helpers.links.cancel')), tickets_path, class: 'btn btn-warning'
