= devise_error_messages!
%div.border-form-div
  %h2
    Edit #{resource_name.to_s.humanize}
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    %div
      = f.email_field :email, placeholder: 'Email', autofocus: true
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        Currently waiting confirmation for: #{resource.unconfirmed_email}
    %div
      %i (leave blank if you don't want to change it)
      %br/
      = f.password_field :password, placeholder: 'Password', autocomplete: 'off'
    %div
      = f.password_field :password_confirmation, placeholder: 'Password confirmation'
    %div
      %i (we need your current password to confirm your changes)
      %br/
      = f.password_field :current_password,  placeholder: 'Current password'
    %div= f.submit 'Update', class: 'btn btn-primary'
  %h3 Cancel my account
  %p
    Unhappy? #{button_to 'Cancel my account', registration_path(resource_name), data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-warning'}
  = link_to 'Back', :back
